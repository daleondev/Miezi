CompileFlags:
  Add: 
    - -std=gnu++23
    - -stdlib=libc++
    - -fmodules
    - -fimplicit-modules
    - -fimplicit-module-maps
    - -fcxx-modules
    - -fprebuilt-module-path=build/CMakeFiles/__cmake_cxx23.dir
    - -fprebuilt-module-path=build/CMakeFiles/glm.dir
    - -fprebuilt-module-path=build/CMakeFiles/Miezi.dir
    - -DMZ_OS_LINUX
    - -DMZ_ENABLE_ASSERTS
    - -DMZ_WINDOW_GLFW
    - -DMZ_RENDERER_OPENGL
    - -I/home/david/Dokumente/Miezi/src
    - -I/home/david/Dokumente/Miezi/build/gladsources/glad_gl_core_46/include
    - -I/home/david/Dokumente/Miezi/external/entt/single_include

Diagnostics:
  Suppress: 
    - -Wmodule-import-in-extern-c

---

If:
  PathMatch: .*[Ee]ntity.*
Diagnostics:
  Suppress: 
    - template_instantiate_undefined
    - module_unimported_use
    - ambiguous_reference

